---
import MainSiteLayout from '@/layouts/MainSiteLayout.astro'
// import Test from '@/components/test/test.tsx'
import { Vortex } from '@/components/ui/vortex'
import { HeroAnimation } from '@/components/ui/hero-animation'
// import { ImageSlider } from '@/components/ui/image-slider'

import { AnimatedBeamDemo2 } from '@/components/ui/animated-beam-demo2'
import { OrbitingCirclesDemo } from '@/components/ui/orbiting-circles-demo'

import CardFlip from '@/components/ui/CardFlip/CardFlip'

// const title = 'This is a title'
---

<MainSiteLayout
	description="Lorem ipsum dolor sit amet"
	pubDate={new Date('August 08 2021')}
	heroImage="/blog-placeholder-about.jpg"
	title="This is a title"
>
	<div class="hero relative flex w-[calc(100%)] mx-auto overflow-hidden" style="height: 500px;">
		<HeroAnimation client:load/>
		<Vortex
			backgroundColor="transparent"
			rangeY={800}
			particleCount={200}
			baseSpeed={1}
			baseHue={200}
			className="flex items-center flex-col justify-center px-2 md:px-10  py-4 w-full h-full"
			client:load
		/>
	</div>
	<div class="bg-white sm:py-6 dark:bg-gray-800">
		<AnimatedBeamDemo2 className="h-[300px]" client:load/>
	</div>
	<div class="bg-white sm:py-6 dark:bg-gray-800">
		<OrbitingCirclesDemo client:load/>
	</div>
	<div class="relative bg-white sm:py-6 dark:bg-gray-800 flex items-center flex-col justify-center">
		<CardFlip
			width={300}
			height={300}
			front={<div slot="front">A: Front</div>}
			back={<div slot="back">B: Back</div>}
			client:load
		/>
	</div>

</MainSiteLayout>

